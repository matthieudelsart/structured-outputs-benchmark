{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "TOPâ€‘style frame (generic)",
  "$defs": {
    "slotValue": {
      "oneOf": [
        { "type": "string" },   
        { "$ref": "#/$defs/frame" },
        { "type": "array",               
          "items": { "$ref": "#/$defs/slotValue" } }
      ]
    },

    "frame": {
      "type": "object",
      "properties": {
        "intent": { "type": "string" },          
        "slots":  {
          "type": "object",
          "patternProperties": {
            "^[A-Z0-9_]+$": { "$ref": "#/$defs/slotValue" }
          },
          "additionalProperties": false
        }
      },
      "required": ["intent", "slots"],
      "additionalProperties": false
    }
  },

  "$ref": "#/$defs/frame"
}
